// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Key Model
model Key {
  id            Int            @id @default(autoincrement())
  code          String         @unique
  status        String         @default("active") // active, used
  // type removed
  usedAt        DateTime?
  usedByEmail   String?
  createdAt     DateTime       @default(now())
  
  // Relations
  // A key is used by ONE subscription.
  subscriptionId Int?
  subscription   Subscription? @relation(fields: [subscriptionId], references: [id])

  @@index([status])
  @@index([usedByEmail])
  @@map("keys")
}

// Session Model
model Session {
  id            Int            @id @default(autoincrement())
  email         String
  sessionJson   String         // Stored as stringified JSON because SQLite doesn't support JSON type natively well in all Prisma versions, string is safer
  expiresAt     DateTime
  telegramId    BigInt
  createdAt     DateTime       @default(now())
  
  @@index([email])
  @@index([telegramId])
  @@map("sessions")
}

// Subscription Model
model Subscription {
  id                  Int       @id @default(autoincrement())
  email               String
  type                String // "1m", "3m"
  status              String // "active", "completed", "expired"
  startDate           DateTime  @default(now())
  activationsCount    Int       @default(0)
  lifetimeActivations Int       @default(0)
  nextActivationDate  DateTime?
  note                String?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  keys                Key[]

  @@index([email])
  @@index([status])
  @@index([nextActivationDate])
  @@map("subscriptions")
}

// Activity Log Model
model ActivityLog {
  id        Int      @id @default(autoincrement())
  action    String   // ACTIVATION, RENEWAL, ERROR, ADMIN_LOGIN, KEY_ADDED, ADMIN_ACTION
  details   String?  // JSON string or text details
  email     String?  // Related user email (optional)
  adminIp   String?  // IP address of the admin who performed the action
  source    String?  // "admin", "bot", "scheduler", "system"
  createdAt DateTime @default(now())

  @@index([action])
  @@index([createdAt])
  @@index([source])
  @@map("activity_logs")
}
